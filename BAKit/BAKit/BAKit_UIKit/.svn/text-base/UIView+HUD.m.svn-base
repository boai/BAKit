#import "UIView+HUD.h"
#import <objc/runtime.h>

@implementation UIView (HUD)

-(void )setShowHUDCount:(NSInteger)showHUDCount{
    objc_setAssociatedObject(self, @selector(showHUDCount), @(showHUDCount), OBJC_ASSOCIATION_RETAIN_NONATOMIC);
}

-(NSInteger )showHUDCount{
    return [objc_getAssociatedObject(self, _cmd) integerValue];
}

- (void)showHUD {
    if (self.showHUDCount < 0){
        self.showHUDCount = 0;
    }
    
    if (self.showHUDCount == 0){
        [MBProgressHUD showHUDAddedTo:self animated:NO];
    }
    self.showHUDCount++;
}

- (void)ba_showHudWithText:(NSString *)text
{
    if (self.showHUDCount < 0){
        self.showHUDCount = 0;
    }
    
    if (self.showHUDCount == 0){
        MBProgressHUD *hud = [MBProgressHUD showHUDAddedTo:self animated:YES];
        hud.label.text = text;
    }
    self.showHUDCount++;
}

- (void)ba_showHudWithText:(NSString *)text hideAfterTime:(CGFloat)time
{
    MBProgressHUD *hud = [MBProgressHUD showHUDAddedTo:self animated:YES];
    hud.mode = MBProgressHUDModeText;
    hud.label.text = text;
    [hud hideAnimated:YES afterDelay:time];
}

- (void)ba_showHudWithCustomview:(UIImageView *)imageView text:(NSString *)text hideAfterTime:(CGFloat)time
{
    if (self.showHUDCount < 0)
    {
        self.showHUDCount = 0;
    }
    
    if (self.showHUDCount == 0)
    {
//        MBProgressHUD *hud = [MBProgressHUD showHUDAddedTo:self animated:YES];
//        hud.mode = MBProgressHUDModeText;
//        hud.label.text = text;
//        [hud hideAnimated:YES afterDelay:time];
        
        [MBProgressHUD showCustomview:imageView andTextString:text toView:self andAfterDelay:time];

    }
    self.showHUDCount++;
}

- (void)hiddenHUD {
    self.showHUDCount--;
    if (self.showHUDCount < 0){
        self.showHUDCount = 0;
    }
    
    if (self.showHUDCount == 0){
        [MBProgressHUD hideHUDForView:self animated:NO];
    }
}

@end
